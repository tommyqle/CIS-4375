<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

  <!-- Page header -->
  <header>
      <div class="text-center">
        <img class="img-fluid" src="../img/Orderly4.png">
      </div>
  </header>

    <!-- Login card -->
        <div class="card shadow-lg mx-auto" style="width: 25rem;">
          
          <h5 class="m-4 text-center text-primary">Welcome to Orderly. <br> Please sign in to begin.</h5>

          <form action="/process_login" method="post">
            <!-- Username input -->
            <div class="form-outline m-4">
              <input type="username" id="usernameform" class="form-control" placeholder="Username" required />
              <label class="form-label" for="usernameform"></label>
            </div>

            <!-- Password input -->
            <div class="form-outline m-4">
              <input type="password" id="passwordform" class="form-control" placeholder="Password" required />
              <label class="form-label" for="passwordform"></label>
            </div>

            <!-- Submit button -->
            <div class="d-grid col-12 mx-auto">
              <button type="submit" class="btn btn-block m-4" style="background-color: #38b6ff; color: white;">Log in</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  <footer>
      <%- include('../partials/footer'); %>
  </footer>

</body>

</html>


