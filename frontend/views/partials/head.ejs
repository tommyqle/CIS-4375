<style>
    body { 
        padding-top: 0px; 
        font-family: 'Inter', sans-serif;
    }

    .nav-pills .nav-link:hover { 
        background-color: rgb(12, 12, 82);
        display: block;
        width: 100%;
    }
    
    .csslink {
        color: white;
        &:hover {
            color: #8bd8bd;
        }
        transition: all 0.6s ease;
    }
    
    .csslinkactive {
        color: #8bd8bd;
    }
    
    .buttoncss {
        color:white;
        background-color: #243665;
        &:hover {
            color:white;
            background-color: rgb(12, 12, 82);
        }
    }

    .csstable {
        border: 2px solid #243665;
    }
    
    .sidebar {
        width: 250px;
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        background-color: #243665;
    }

    .content {
        margin-left: 250px
    }

    .countlink {
        color: white;
        width:200px;
        background-color: #243665;
        border-radius: 5px;
        text-align: center;
        &:hover {
            color: white;
            background-color: rgb(12, 12, 82);
        }
        transition: all 0.5s ease;
    }

    .togglecss {
        border: 2px solid #243665;
    }
    .togglecss:checked {
        border: 2px solid #243665;
        background-color: #8bd8bd;
    }

    .spinnercss {
        color: #243665;
    }

    .nav-link.active {
        color:#243665 !important;
    }

    .nav-link {
        color: white;
        &:hover {
            color:#8bd8bd
        }
    }
</style>


