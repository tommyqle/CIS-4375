<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <div class="row g-0 flex-nowrap">
        <%- include('../partials/sidebar'); %>

        <!-- Content area begins -->
        <div class="content col">
            <!-- Page header -->
            <h1 class="p-4" style="background-color: #8bd8bd; color:#243665;">
                Total Price
            </h1>

            <!-- Inventory table view begins -->
            <% if (locals.data) { %>
                <div class="container-fluid">
                <button onclick="printTable()" class="nav-link countlink px-2 m-4">
                    <i class="fs-4 bi bi-printer"></i>
                    <span class="ms-1 d-none d-sm-inline">Print Report</span>
                </button>
                <table class="table" id="totalTable">
                    <thead>
                        <tr style="--bs-table-bg: #8bd8bd; --bs-table-color: #243665;">
                            <th scope="col">Location</th>
                            <th scope="col">Total Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% locals.data.forEach(function(data) { %>
                            <tr>
                                <td scope="row"><%= data.tableName.toUpperCase() %></td>
                                <td scope="row">$<%= parseFloat(data.totalValue).toLocaleString() %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
                </div>
            <% } %>
            <!-- Inventory table view ends -->
        </div>
        <!-- Content area ends -->
    </div>

<script>
    function printTable() {
        var printWindow = window.open('', '_blank');
        printWindow.document.write('<html><head><title>Low Inventory</title></head><body>');
        printWindow.document.write(document.getElementById('totalTable').outerHTML);
        printWindow.document.write('</body></html>');
        printWindow.document.close();
        printWindow.print();
    }
</script>

</body>

</html>


