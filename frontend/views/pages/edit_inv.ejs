<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <div class="row g-0 flex-nowrap">
        <!-- Sidebar navigation begins -->
        <div class="sidebar col-auto col-md-3 col-xl-2 px-sm-0 px-0" role="navigation">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 min-vh-100 justify-content-center">
                <a href="/overview" class="d-flex mx-auto">
                    <img src="../img/countify_sidebar.png" width="180" height="90" class="mx-auto"/>
                </a>
                <!-- Navigation links begins -->
                <ul class="nav nav-pills btn-toggle-nav col-auto flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu" style="display: block; width: 100%;">
                    <!-- Inventory Overview -->
                    <li class="nav-item">
                        <a href="/overview" class="nav-link align-middle px-2 mb-2 csslink">
                            <i class="fs-4 bi bi-clipboard-check"></i> <span class="ms-1 d-none d-sm-inline">Inventory Overview</span>
                        </a>
                    </li>
                    <!-- Sugar Land inventory link -->
                    <li class="nav-item">
                        <a href="/sugarland" class="nav-link align-middle px-2 mb-2 csslink">
                            <i class="fs-4 bi bi-shop"></i> <span class="ms-1 d-none d-sm-inline">Sugar Land Inventory</span>
                        </a>
                    </li>
                    <!-- Galleria inventory link -->
                    <li class="nav-item">
                        <a href="/galleria" class="nav-link align-middle px-2 mb-2 csslink">
                            <i class="fs-4 bi bi-shop"></i> <span class="ms-1 d-none d-sm-inline">Galleria Inventory</span>
                        </a>
                    </li>
                    <!-- Edit inventory link -->
                    <li class="nav-item">
                        <a href="#" class="nav-link align-middle px-2 mb-2 csslink csslinkactive">
                            <i class="fs-4 bi bi-pencil"></i> <span class="ms-1 d-none d-sm-inline">Edit Inventory</span>
                        </a>
                    </li>
                </ul>
                <!-- Navigation links ends -->         
                <hr style="height:2px; width: 100%; color: #8bd8bd; background-color:#8bd8bd; opacity: 1"> 

                <!-- Log out button -->
                <a href="/" class="nav-link align-middle px-2 mb-4 csslink">
                    <i class="fs-4 bi bi-box-arrow-right"></i> <span class="ms-1 d-none d-sm-inline">Log out</span>
                </a>   
            </div>
        </div>
        <!-- Sidebar navigation ends -->

        <!-- Content area begins -->
        <div class="content col">
            <!-- Page header -->
            <h1 class="p-4" style="background-color: #8bd8bd; color:#243665;">
                Edit Inventory
            </h1>

            <!-- Add, delete, and update tabs -->
            <div class="card m-4">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs" id="editTab" role="tablist">
                        <li class="nav-item" role="presentation">
                           <button class="nav-link active" id="add-tab" data-bs-toggle="tab" data-bs-target="#add-tab-pane" type="button" role="tab" aria-controls="add-tab-pane" aria-selected="true"><i class="fs-4 bi bi-plus-circle"></i> Add</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="delete-tab" data-bs-toggle="tab" data-bs-target="#delete-tab-pane" type="button" role="tab" aria-controls="delete-tab-pane" aria-selected="false"><i class="fs-4 bi bi-dash-circle"></i> Delete</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="update-tab" data-bs-toggle="tab" data-bs-target="#update-tab-pane" type="button" role="tab" aria-controls="update-tab-pane" aria-selected="false"><i class="fs-4 bi bi-arrow-repeat"></i> Update</button>
                        </li>            
                    </ul>
                </div>
                <!-- Content for add, delete, and update tabs -->
            <div class="tab-content card-body" id="editTabcontent">
                <!-- Add pane -->
                <div class="tab-pane fade show active" id="add-tab-pane" role="tabpanel" aria-labelledby="add-tab" tabindex="0">
                    <form action="/edit_productinv" method="post">
                        <div class="form-group m-4">
                            <label for="categorylist" class="form-label">Category:</label>
                            <select class="form-select" aria-label="Test" id="categorylist" name="category">
                                <option>Meats</option>
                                <option>Breads</option>
                                <option>Fried</option>
                                <option>Sauce/Dairy</option>
                                <option>Veggies/Cheese</option>
                                <option>Plastic/Papers</option>
                                <option>Seasonings</option>
                                <option>Cleaning</option>
                                <option>Drinks</option>
                            </select>
                        </div>
                        <div class="form-group m-4">
                            <label for="itemNameInput" class="form-label">Item Name:</label>
                            <input type="text" class="form-control" id="itemNameInput" name="itemName">
                        </div>
                        <div class="form-group m-4">
                            <label for="price">Price:</label>
                            <input type="number" class="form-control" id="price" name="price" step="0.01" placeholder="Enter price">
                        </div>
                        <button type="submit" class="btn btn-primary m-4">
                            Add
                        </button>
                    </form>
                </div>
                <!-- Delete pane -->
                <div class="tab-pane fade" id="delete-tab-pane" role="tabpanel" aria-labelledby="delete-tab" tabindex="0">Delete test</div>
                <!-- Update pane -->
                <div class="tab-pane fade" id="update-tab-pane" role="tabpanel" aria-labelledby="update-tab" tabindex="0">Update test</div>
            </div>
            </div>
            
            

            <!-- Inventory table view begins -->
            <% if (locals.data) { %>
                <div class="container-fluid">
                <table class="table">
                    <thead>
                        <tr style="--bs-table-bg: #8bd8bd; --bs-table-color: #243665;">
                            <th scope="col">Category</th>
                            <th scope="col">Item</th>
                            <th scope="col">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% locals.data.forEach(function(data) { %>
                            <tr>
                                <td scope="row"><%= data.category_name %></td>
                                <td scope="row"><%= data.product_name %></td>
                                <td scope="row">$<%= data.price %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
                </div>
            <% } %>
            <!-- Inventory table view ends -->
        </div>
        <!-- Content area ends -->
    </div>
      
</body>

</html>

